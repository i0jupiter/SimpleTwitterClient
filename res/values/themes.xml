<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- the theme applied to the application or activity -->
    <style name="TimelineActionBarTheme"
           parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/TimelineActionBar</item>
        <item name="android:actionBarTabStyle">@style/TimelineActionBarTabs</item>
        <item name="android:actionBarTabTextStyle">@style/TimelineActionBarTabText</item>
    </style>
    
    <!-- ActionBar styles -->
    <style name="TimelineActionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#1e90ff</item>
    </style>
    
    <!-- ActionBar tab styles -->
    <style name="TimelineActionBarTabs"
           parent="@android:style/Widget.ActionBar.TabView">
        <item name="android:background">#f5f5f0</item>
    </style>
    
    <style name="TimelineActionBarTabText"
           parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">#1e90ff</item>
    </style>
</resources>